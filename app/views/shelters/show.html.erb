<div class="block p-2 bg-gray-50 border rounded-md my-4 p-4">
  <h2 class="text-2xl text-gray-600 mb-8 mr-8 inline-block uppercase"><%= @shelter.name %></h2>
  <%= tw_link "Edit", edit_shelter_path(@shelter), "bg-blue-500" %>
  <%= tw_link "Delete", shelter_path(@shelter), "bg-red-500", method: :delete, data: { confirm: "Are you sure?" } %>

  <p><span class="font-bold w-24 inline-block">City:</span> <%= @shelter.city %></p>
  <p><span class="font-bold w-24 inline-block">Rank:</span> <%= @shelter.rank %></p>
  <p><span class="font-bold w-24 inline-block">Pets Count:</span> <%= @shelter.pets.size %></p>

  <%= tw_link "Show Pets", shelter_pets_path(@shelter), "bg-yellow-400" %>
  <%= tw_link "New Pet", new_shelter_pet_path(@shelter), "bg-gray-400" %>

  <% if @pets %>
    <h3 class="text-xl text-gray-600 my-8 mr-8 block uppercase">Pets sheltered by <%= @shelter.name %></h3>
    <%= render "filter_form" %>
    <ul class="pets list-none">
      <%= render @pets, local: { hide_owner: true } %>
    </ul>
  <% end %>
</div>
